<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-blue-700 text-center">Add Numbers</h1>
    <%= form_with url: add_numbers_path, method: :get, local: true, class: "space-y-4" do %>
      <div>
        <label class="block text-gray-700 mb-2">Enter numbers (comma separated):</label>
        <%= text_field_tag :numbers, params[:numbers], class: "border rounded px-3 py-2 w-full" %>
      </div>
      <div class="flex justify-center">
        <%= submit_tag "Add", class: "bg-blue-600 text-white w-full py-2 rounded hover:bg-blue-700 font-semibold" %>
      </div>
    <% end %>
    <% if params[:numbers].present? %>
      <p class="mt-6 text-green-700 font-semibold text-center">Result: <%= @result %></p>
    <% end %>
  </div>
</div>